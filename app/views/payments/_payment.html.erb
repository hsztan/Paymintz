<div id="<%= dom_id payment %>" class="payment">
  <div class="icon">
    <img src="https://picsum.photos/60" alt="randy">
  </div>
  <div class="info">
    <p><%= payment.name %></p>
    <p class="date"><%=payment.created_at.strftime('%d %b %Y')%></p>
  </div>
  <div class="total">
    <%= number_to_currency payment.amount %>
  </div>
</div>
