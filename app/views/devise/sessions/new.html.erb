<%= render partial: "shared/navigation", locals: {icon_type:'fa-solid', icon_name: 'arrow-left', title:'LOGIN', right:''} %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, hidden: true %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: 'Password', required: true %>
  </div>
  <div class="actions verb">
    <%= f.submit "Log in", class: 'btn create' %>
  </div>
<% end %>
<div class="devise-links">
  <%= render "devise/shared/links" %>
</div>
